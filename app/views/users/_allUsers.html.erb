<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th></th>
    <!-- <th></th> -->
    <!-- <th></th> -->
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <!-- <td><%= link_to 'Edit', edit_user_path(user) %></td> -->
    <!-- <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
    
    <% if @partialIndicator == "addStudents"%>
      <% if @course.users.include?(user) %>
        <td><%=link_to "Remove Student", removeCourse_user_path(user: user, course: @course) %></td>
      <% else %>
        <td><%=link_to "Add Student", addCourse_user_path(user: user, course: @course) %></td>
      <% end %>
    <% end %>

  </tr>
<% end %>
</table>